{% macro show(chef, totalRecipes, isAdmin) %}

<div class="edit-box">
            <h2 class="details-h2">Chef: {{chef.name}}</h2>
            <div>
                {% if isAdmin %}
                    <a class="button" href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
                {% endif %}
            </div>
        </div>

        <div class="presentation-box">
            <img class="presentation-img chef-img" src="{{chef.file.src}}" alt="{{chef.file.name}}">
            <h1 class="details-h1">{{chef.name}}</h1>
            <small class="presentation-author">
                {{totalRecipes.total}}
                {% if totalRecipes.total != 1  %} receitas {%endif%}
                {% if totalRecipes.total == 1  %} receita {%endif%}
            </small>
        </div>

        <h2 class="details-h2">
            {% if totalRecipes.total > 0  %} Receitas 
            {% else %} Chef n√£o possui nenhum receita cadastrada
            {%endif%}
        </h2>

{% endmacro %}

