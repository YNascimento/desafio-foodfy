<div class="input-box"> {# NAME #}
    <div class="input-title">Nome</div>
    <input type="text" name="name" value="{{chef.name}}">
</div>

<div class="input-box"> {# Imagens #}
    <div class="input-title">Avatar</div>
    <div class="photo-box">
        <div class="photos-upload">
            <input id="photos-input" type="file" name="photo" accepty="image/*" onchange="photosUpload.handleInput(event)">
            <p>Enviar Avatar</p>
        </div>
        
        <div id="photo-preview">
            {% if chef.file %}
                <div class="photo" id="{{chef.file.id}}">
                    <img src="{{chef.file.src}}" alt="{{chef.file.name}}">
                    <i class="material-icons" onclick="photosUpload.removeOldPhoto(event)">close</i>
                </div>
                <input type="hidden" name="removed_files">
            {% endif %}
        </div>
    </div>
</div>