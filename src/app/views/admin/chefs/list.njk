{% extends "admin/layout.njk" %}


{% block head %}
    <title>Foodfy - Admin</title>
    <link rel="stylesheet" href="/css/chefs.css">
{% endblock %} 


{% block content %}   

    <div class="content-box">
        <div class="header-box">
            <h2>Gerenciar Chefs</h2>
            <div>
                {% if isAdmin %}
                    <a href="/admin/chefs/create" class="button" type="submit">Criar Chef</a>
                {% endif %}
            </div>
        </div>

        <div class="cards">
            {% for chef in chefs %}
            <div class="card">
                <img src="{{files[loop.index0].src}}" alt="{{files[loop.index0].name}}">
                <div>
                    <h4>{{chef.name}}</h4>
                    <small class="presentation-author">
                        {{chef.totalRecipes}}
                        {% if chef.totalRecipes != 1  %} receitas {%endif%}
                        {% if chef.totalRecipes == 1  %} receita {%endif%}
                    </small>
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %} 
